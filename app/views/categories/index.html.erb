<div class="container manage_categories">
  <div class="page_header">
    <h1>Manage Categories</h1>
  </div>

  <div id="create_category_btn_parent_div">
    <%= link_to 'Create a New Category', new_category_path, class: "btn btn-default clearfix" %>
  </div>
  
  <div class="table-responsive">

    <table class="table">
      <thead>
        <tr>
          <th>Category</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.alphabetical_order_asc.each do |category| %>
          <tr>
            <td><%= category.title %></td>
            <td><%= link_to 'Edit', edit_category_path(category) %></td>
            <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure? This will delete the category and remove it from all words that contain it.' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
