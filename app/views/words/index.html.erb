<div class="row">

  <div class="col-xs-3">
    <div id="new-word-button">
      <%= link_to 'New Word', new_word_path, class: "btn btn-primary btn-lg", remote: true %>
    </div>

    <div id="new_word_form" style="display:none;"></div>
  </div>


  <div class="col-xs-9">
    
    <div class="table-responsive">
      
      <table class="table">
        <thead>
          <tr>
            <th>Word</th>
            <th>Definition</th>
            <th>Categories</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <div id="words"><%= render @words %></div>
        </tbody>
      </table>

    </div>
    
  </div>

  
</div>