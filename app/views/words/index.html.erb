<div class="page_header">
  <h1>My Word List</h1>
</div>

<div class="container">
  <% if Quote.all.count > 0 %>
    <div class="quote">
      <h3>
        "<%= Quote.order("RANDOM()").first.content %>"
      </h3>
      <h4>~ <%= Quote.order("RANDOM()").first.author %></h4>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-2">
      <!-- Button trigger modal -->
      <p class="text-muted">Make your WordList more awesome...</p>
      <button type="button" class="btn btn-primary btn-lg btn-block" id="add-word-button" data-toggle="modal" data-target="#myModal">
        Add a Word!
      </button>

      <%= render('layouts/modal') %>
  
    </div>

    <div class="col-md-10">
      <button class="btn btn-sm btn-info", id="show-all-words-button">Show All Words</button>
      <%= render('layouts/all_words') %>
      <%= render partial: 'words_grid', locals: { words: @words } %>
    </div> 
  </div>

</div>