<table class="table">
  <thead>
    <tr>
      <th>Word</th>
      <th>Definition</th>
      <th>Categories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.title %></td>
        <td><%= word.description %></td>
        <td><% word.categories.each do |category| %>
          <%= category.title %>
          <% end %>
        </td>
        <td><%= link_to 'Delete', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id="new-word-button">
  <%= link_to 'New Word', new_word_path, class: "btn btn-primary" %>
</div>