<div class="page_header">  
  <h1>Quotes</h1>
</div>


<div class="container quotes_page">

  <div class="center-button">
    <%= link_to new_quote_path, class: "btn btn-primary" do %>
      New Quote <span class="glyphicon glyphicon-thumbs-up"></span>
    <% end %>
  </div>

  <br>

  <ul class="list-group">
    <% @quotes.order_by_creation_date.each do |quote| %>
      <li class="list-group-item row">
        <div class="col-xs-7">
          <%= quote.content %>
        </div>
        
        <div class="col-xs-5">
          <%= link_to edit_quote_path(quote), class: "btn btn-default btn-sm" do %>
            Edit <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to quote, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" do %>
            Delete <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>

</div>
